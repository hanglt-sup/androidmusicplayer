<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_likedSongsPage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg"
    tools:context=".liked.LikedSongsPageFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/liked_song"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".liked.LikedSongsTitle">

            <LinearLayout
                android:id="@+id/main_frame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="15dp">
                    <ImageView
                        android:id="@+id/back_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#00000000"
                        android:src="@drawable/back_button"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/spotify_mix"
                        android:text="Liked Songs"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/spotify_mix"
                        android:text="3  songs"
                        android:textColor="#B3B3B3" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp">

                    <ImageView
                        android:id="@+id/shuffle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:background="#00000000"
                        android:src="@drawable/shuffle"/>
                </RelativeLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="15dp"
            android:scrollbars="none">
            <LinearLayout
                android:id="@+id/songs_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:background="#00000000"
                tools:context=".liked.SongsList">

                <!--Song tile 1-->
                <RelativeLayout
                    android:id="@+id/song1"
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:orientation="horizontal"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp">

                    <!--    Song Image-->
                    <ImageView
                        android:id="@+id/songimage1"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/song1"/>

                    <!--    Song Description-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:layout_centerVertical="true"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:layout_toEndOf="@+id/songimage1"
                        android:layout_toStartOf="@+id/utility1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Back in Black"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:maxLines="1"
                            android:ellipsize="end"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">
                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:src="@drawable/down_arrow"/>
                            <!--                    <ImageView-->
                            <!--                        android:layout_width="15dp"-->
                            <!--                        android:layout_height="15dp"-->
                            <!--                        android:layout_marginStart="5dp"-->
                            <!--                        android:src="@drawable/explicit"/>-->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:text="AB/CD"
                                android:textSize="15sp"
                                android:textColor="#B3B3B3"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!--    Like & View more-->
                    <LinearLayout
                        android:id="@+id/utility1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/liked_button"/>
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginStart="35dp"
                            android:src="@drawable/more" />
                    </LinearLayout>
                </RelativeLayout>


                <!--Song tile 2-->
                <RelativeLayout
                    android:id="@+id/song2"
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:orientation="horizontal"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp">

                    <!--    Song Image-->
                    <ImageView
                        android:id="@+id/songimage2"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/song2"/>

                    <!--    Song Description-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:layout_centerVertical="true"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:layout_toEndOf="@+id/songimage2"
                        android:layout_toStartOf="@+id/utility2">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="You Give Love A Bad Name"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:maxLines="1"
                            android:ellipsize="end"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">
                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:src="@drawable/down_arrow"/>
                            <!--                    <ImageView-->
                            <!--                        android:layout_width="15dp"-->
                            <!--                        android:layout_height="15dp"-->
                            <!--                        android:layout_marginStart="5dp"-->
                            <!--                        android:src="@drawable/explicit"/>-->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:text="Jon Davi"
                                android:textSize="15sp"
                                android:textColor="#B3B3B3"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!--    Like & View more-->
                    <LinearLayout
                        android:id="@+id/utility2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/liked_button"/>
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginStart="35dp"
                            android:src="@drawable/more" />
                    </LinearLayout>
                </RelativeLayout>

                <!--Song tile 3-->
                <RelativeLayout
                    android:id="@+id/song3"
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:orientation="horizontal"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp">

                    <!--    Song Image-->
                    <ImageView
                        android:id="@+id/songimage3"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/song3"/>

                    <!--    Song Description-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:layout_centerVertical="true"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:layout_toEndOf="@+id/songimage3"
                        android:layout_toStartOf="@+id/utility3">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dangerously"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:maxLines="1"
                            android:ellipsize="end"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">
                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:src="@drawable/down_arrow"/>
                            <!--                    <ImageView-->
                            <!--                        android:layout_width="15dp"-->
                            <!--                        android:layout_height="15dp"-->
                            <!--                        android:layout_marginStart="5dp"-->
                            <!--                        android:src="@drawable/explicit"/>-->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:text="Charle Puth"
                                android:textSize="15sp"
                                android:textColor="#B3B3B3"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!--    Like & View more-->
                    <LinearLayout
                        android:id="@+id/utility3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/liked_button"/>
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginStart="35dp"
                            android:src="@drawable/more" />
                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CC121212"
        android:layout_alignParentBottom="true"
        app:menu="@menu/navbar" />

</RelativeLayout>